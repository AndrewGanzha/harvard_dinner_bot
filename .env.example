TG_TOKEN=put_telegram_bot_token_here
# Preferred: put OAuth Basic Authorization key here.
GIGACHAT_AUTH_KEY=
# Backward compatibility: if GIGACHAT_AUTH_KEY is empty, this value is used as Basic key.
GIGACHAT_TOKEN=put_gigachat_basic_authorization_key_here
GIGACHAT_OAUTH_URL=https://ngw.devices.sberbank.ru:9443/api/v2/oauth
GIGACHAT_SCOPE=GIGACHAT_API_PERS
GIGACHAT_API_URL=https://gigachat.devices.sberbank.ru/api/v1
GIGACHAT_MODEL=GigaChat-2
# If your OS doesn't trust the Russian certificates chain, set false temporarily.
GIGACHAT_SSL_VERIFY=true
